<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"


    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"

        android:weightSum="1.2">

        <TextView
            android:id="@+id/mSrNo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".1"

            android:gravity="center"
            android:padding="5dp"
            android:text="@string/s_no"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/mMedicineName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_1"
            android:layout_weight=".3"

            android:gravity="center"
            android:padding="5dp"
            android:text="@string/appointment_date"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/mDrugDose"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_1"
            android:layout_weight=".2"
            android:gravity="center"
            android:padding="5dp"
            android:text="250mg"
            android:textSize="@dimen/dp_12"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mTimeTaken"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_1"
            android:layout_weight=".2"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/time"
            android:textSize="@dimen/dp_12"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mTakenDay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_1"
            android:layout_weight=".2"
            android:gravity="center"
            android:padding="5dp"
            android:text="sunday,Monday"
            android:textSize="@dimen/dp_12"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mTakenDate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_1"
            android:layout_weight=".2"
            android:gravity="center"
            android:padding="5dp"
            android:text="12/03/2016"
            android:textSize="@dimen/dp_12"
            android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/takenBtn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_4"

            android:background="@drawable/login_provider_btn"
            android:text="Taken"
            android:textColor="@color/white_color"
            android:textSize="@dimen/text_size_default" />

        <ImageView
            android:id="@+id/takenTick"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_14"
            android:src="@mipmap/check_btn"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>