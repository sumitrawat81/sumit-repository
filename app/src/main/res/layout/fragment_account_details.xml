<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color">


    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />


    <ScrollView
        android:id="@+id/details_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/account_detail"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_l"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:gravity="center"
                    android:text="@string/e911md_will_transfer"
                    android:textColor="#BABABA"
                    android:textSize="@dimen/text_size_default_11" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/profile_border"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:gravity="start|center_vertical"
                    android:text="@string/AccountDetail_BankName"
                    android:textColor="@color/profile_button"
                    android:textSize="@dimen/text_size_default" />

                <EditText
                    android:id="@+id/mDBankName"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0.6"
                    android:inputType="text"
                    android:background="@drawable/editext_round_border_bg1"
                    android:hint="ICICI Bank LTD"
                    android:paddingStart="@dimen/dp_10"
                    android:textColorHint="@color/stoke_border"
                    android:textSize="@dimen/text_size_default"
                    android:imeOptions="actionNext"
                    android:singleLine="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="0.4"
                    android:gravity="start|center_vertical"
                    android:text="@string/AccountDetail_AccNamee"
                    android:textColor="@color/profile_button"
                    android:textSize="@dimen/text_size_default" />

                <EditText
                    android:id="@+id/mDAccountName"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0.6"
                    android:background="@drawable/editext_round_border_bg1"
                    android:hint="Saving Account"
                    android:paddingStart="@dimen/dp_10"
                    android:textColorHint="@color/stoke_border"
                    android:textSize="@dimen/text_size_default"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:singleLine="true"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="0.4"
                    android:gravity="start|center_vertical"

                    android:text="@string/AccountDetail_BSB"
                    android:textColor="@color/profile_button"
                    android:textSize="@dimen/text_size_default" />

                <EditText
                    android:id="@+id/mDBSD"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0.6"
                    android:background="@drawable/editext_round_border_bg1"
                    android:paddingStart="@dimen/dp_10"
                    android:textColorHint="@color/stoke_border"
                    android:textSize="@dimen/text_size_default"
                    android:imeOptions="actionNext"
                    android:singleLine="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:gravity="start|center_vertical"
                    android:text="@string/AccountDetail_AccountNo"
                    android:textColor="@color/profile_button"
                    android:textSize="@dimen/text_size_default" />

                <EditText
                    android:id="@+id/mDAccountNumber"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0.6"
                    android:background="@drawable/editext_round_border_bg1"
                    android:hint="**********"
                    android:inputType="textPassword"
                    android:digits="@string/digits"
                    android:paddingStart="@dimen/dp_10"
                    android:textColorHint="@color/stoke_border"
                    android:textSize="@dimen/text_size_default"
                    android:imeOptions="actionNext"
                    android:singleLine="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:gravity="start|center_vertical"
                    android:text="@string/AccountDetail_PaypalEmail"
                    android:textColor="@color/profile_button"
                    android:textSize="@dimen/text_size_default" />

                <EditText
                    android:id="@+id/mDPaypalId"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0.6"
                    android:background="@drawable/editext_round_border_bg1"
                    android:hint="abc@gmail.com"
                    android:paddingStart="@dimen/dp_10"
                    android:textColorHint="@color/stoke_border"
                    android:textSize="@dimen/text_size_default"
                    android:imeOptions="actionNext"
                    android:singleLine="true"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="0.6"
                    android:text="@string/AccountDetail_papaltoget"
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp_14" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/mDSubmit"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_50"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight=".60"
                    android:background="@drawable/login_provider_btn"
                    android:gravity="center"
                    android:text="@string/submit"
                    android:textAllCaps="false"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/text_size_m" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>