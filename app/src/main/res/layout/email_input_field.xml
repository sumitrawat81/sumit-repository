<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_transparent_bg"
    android:clickable="true"
    android:orientation="vertical"

    android:padding="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@drawable/login_provider_btn">

        <TextView
            android:id="@+id/txt"
            android:layout_width="@dimen/email_field_btn_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/login_provider_btn"
            android:maxLines="1"
            android:padding="10dp"
            android:text="@string/prompt_email"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ 1234567890 @."
            android:textSize="@dimen/dp_12"/>


        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"

            android:layout_toEndOf="@+id/txt"
            android:background="@drawable/white_round_bg"
            android:gravity="center_vertical"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:padding="10dp"
            android:textSize="@dimen/text_size_default">

            <requestFocus />
        </EditText>

    </RelativeLayout>

</LinearLayout>
