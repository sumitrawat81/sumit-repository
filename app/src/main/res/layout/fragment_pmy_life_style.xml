<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:clickable="true"
    android:orientation="vertical"

    tools:context="com.sibsefid.fragemnts.patient.myhistory.PMyLifeStyle">

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView

        android:id="@+id/list"
        android:name="com.sibsefid.fragemnts.patient.myresult.PatientSummery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/add_layout"

        app:layoutManager="LinearLayoutManager"
        tools:context="com.sibsefid.fragemnts.patient.myhistory.PMyLifeStyle"
        tools:listitem="@layout/row_patient_lifestyle" />

</RelativeLayout>
