<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"

        >

        <TextView
            android:id="@+id/filterBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="@dimen/dp_10"
            android:text="@string/search"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_default"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_location"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_default"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_50"

            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/registre_input_field"
            android:gravity="right|center_vertical"

            android:orientation="horizontal">


            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/mCountryChooser"
                android:layout_width="@dimen/dp_180"
                android:layout_height="wrap_content"

                android:layout_centerVertical="true"
                android:background="@drawable/registre_input_field"
                android:gravity="center_vertical|right"
                app:ms_arrowColor="@color/text_color_black"
                app:ms_baseColor="@android:integer/config_shortAnimTime"
                app:ms_enableErrorLabel="false"
                app:ms_enableFloatingLabel="false"
                app:ms_highlightColor="@integer/color_code"
                app:ms_hint="@string/select_country"
                app:ms_hintColor="@color/gray"
                app:ms_thickness="12sp" />


        </RelativeLayout>

        <RelativeLayout

            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_50"

            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/registre_input_field"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">


            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/mStateChooser"
                android:layout_width="@dimen/dp_180"
                android:layout_height="wrap_content"

                android:layout_centerVertical="true"
                android:background="@drawable/registre_input_field"
                android:gravity="center_vertical|right"
                app:ms_arrowColor="@color/text_color_black"
                app:ms_baseColor="@android:integer/config_shortAnimTime"
                app:ms_enableErrorLabel="false"
                app:ms_enableFloatingLabel="false"
                app:ms_highlightColor="@integer/color_code"
                app:ms_hint="@string/select_state"
                app:ms_hintColor="@color/gray"
                app:ms_thickness="12sp" />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/appointment_date"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_default"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mDateChooser"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/edittext_doctors_availability_bg"
            android:gravity="center_vertical"
            android:hint="@string/search_by_date"
            android:padding="@dimen/dp_10"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/preferred_time"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_default"
            android:textStyle="bold" />

        <RelativeLayout

            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_50"

            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/registre_input_field"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">


            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/mPrefferredTm"
                android:layout_width="@dimen/dp_180"
                android:layout_height="wrap_content"

                android:layout_centerVertical="true"
                android:background="@drawable/registre_input_field"
                android:gravity="center_vertical|right"
                app:ms_arrowColor="@color/text_color_black"
                app:ms_baseColor="@android:integer/config_shortAnimTime"
                app:ms_enableErrorLabel="false"
                app:ms_enableFloatingLabel="false"
                app:ms_highlightColor="@integer/color_code"
                app:ms_hint="@string/all_time"
                app:ms_hintColor="@color/gray"
                app:ms_thickness="12sp" />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/speciality"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_default"
            android:textStyle="bold" />

        <RelativeLayout

            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_50"

            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/registre_input_field"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">


            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/mSpacialChooser"
                android:layout_width="@dimen/dp_180"
                android:layout_height="wrap_content"

                android:layout_centerVertical="true"
                android:background="@drawable/registre_input_field"
                android:gravity="center_vertical|right"
                app:ms_arrowColor="@color/text_color_black"
                app:ms_baseColor="@android:integer/config_shortAnimTime"
                app:ms_enableErrorLabel="false"
                app:ms_enableFloatingLabel="false"
                app:ms_highlightColor="@integer/color_code"
                app:ms_hint="@string/all_speciality"
                app:ms_hintColor="@color/gray"
                app:ms_thickness="12sp" />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/language"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_default"
            android:textStyle="bold" />

        <RelativeLayout

            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_50"

            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/registre_input_field"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">


            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/mLanguageChooser"
                android:layout_width="@dimen/dp_180"
                android:layout_height="wrap_content"

                android:layout_centerVertical="true"
                android:background="@drawable/registre_input_field"
                android:gravity="center_vertical|right"
                app:ms_arrowColor="@color/text_color_black"
                app:ms_baseColor="@android:integer/config_shortAnimTime"
                app:ms_enableErrorLabel="false"
                app:ms_enableFloatingLabel="false"
                app:ms_highlightColor="@integer/color_code"
                app:ms_hint="@string/language"
                app:ms_hintColor="@color/gray"
                app:ms_thickness="12sp" />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/gender"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_default"
            android:textStyle="bold" />

        <RelativeLayout

            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_50"

            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/registre_input_field"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">


            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/mGenderChooser"
                android:layout_width="@dimen/dp_180"
                android:layout_height="wrap_content"

                android:layout_centerVertical="true"
                android:background="@drawable/registre_input_field"
                android:gravity="center_vertical|right"
                app:ms_arrowColor="@color/text_color_black"
                app:ms_baseColor="@android:integer/config_shortAnimTime"
                app:ms_enableErrorLabel="false"
                app:ms_enableFloatingLabel="false"
                app:ms_highlightColor="@integer/color_code"
                app:ms_hint="@string/gender"
                app:ms_hintColor="@color/gray"
                app:ms_thickness="12sp" />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/provider_name"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_default"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/mProviderName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginBottom="@dimen/dp_30"
            android:background="@drawable/edittext_doctors_availability_bg"
            android:gravity="center_vertical"
            android:hint="@string/search_by_name"
            android:padding="@dimen/dp_10"
            android:singleLine="true"

            />

    </LinearLayout>
</ScrollView>
