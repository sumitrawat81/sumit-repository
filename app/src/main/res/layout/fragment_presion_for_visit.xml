<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true"

    android:orientation="vertical"
    tools:context=".fragemnts.patient.bookappointment.PReasonForVisit">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp_16">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reson_for_visit"
            android:textColor="@color/red"
            android:textStyle="bold"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/what_is_reason_of_appointment"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_default" />

        <EditText
            android:id="@+id/mReasonEdt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/registre_input_field_2"
            android:gravity="top"
            android:imeOptions="actionNext"
            android:padding="@dimen/dp_10" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/additional_comments_or_concerns"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_default" />

        <EditText
            android:id="@+id/mCommentEdt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/registre_input_field_2"
            android:gravity="top"
            android:imeOptions="actionNext"
            android:padding="@dimen/dp_10" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/add_a_photo"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_default" />

        <ImageView
            android:id="@+id/browsImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/dp_5" />

        <Button
            android:id="@+id/mBrowse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:text="@string/browse" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mBackBtn"
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/login_patient_btn"
                android:gravity="center"
                android:text="@string/back"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/mContinueBtn"
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/login_provider_btn"
                android:gravity="center"
                android:text="@string/continue_s"
                android:textColor="@android:color/white" />


        </LinearLayout>

    </LinearLayout>
</ScrollView>
