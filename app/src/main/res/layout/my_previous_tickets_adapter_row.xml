<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:padding="@dimen/dp_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@drawable/square_border_bg"
        android:orientation="vertical"
        android:padding="@dimen/dp_2">

        <RelativeLayout
            android:id="@+id/mRelClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:background="#F9F9F9"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/mCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:button="@drawable/arrow_selector"
                android:gravity="center_vertical" />

            <LinearLayout
                android:id="@+id/linear_l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/dp_10">


                <TextView
                    android:id="@+id/ticketDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:drawablePadding="@dimen/dp_5"
                    android:paddingStart="@dimen/dp_5"
                    android:text="5 Oct 2016"

                    android:textColor="@color/red"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"

                    android:padding="@dimen/dp_5">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:paddingStart="@dimen/dp_5"
                        android:text="Ticket:-"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/ticketId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:paddingStart="@dimen/dp_5"
                        android:text="1025"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/expandableLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_5"
                    android:visibility="gone">

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/stoke_border"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/dp_5"
                            android:text="Problem:-"
                            android:textColor="@color/profile_button"

                            android:textSize="@dimen/sp_14"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/problemTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:paddingStart="@dimen/dp_5"
                            android:text="this is my problem"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_12"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_5"
                            android:text="Reply:"
                            android:textColor="@color/profile_button"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/replyText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_5"
                            android:text="jkfhkdjsf hdf "
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/deleteTicket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:padding="@dimen/dp_5"
                            android:src="@mipmap/cross" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>