<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/registre_input_field"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@color/dark_white"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/eye_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mEventTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/event_testing"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_m"
                android:textStyle="bold"

                />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#888"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="3dp"
        android:background="@color/white_color"

        android:orientation="horizontal"

        android:paddingStart="10dp"
        android:paddingEnd="10dp"

        android:weightSum="2">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/mImageVeiw"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/profile_img_infonew" />


            <TextView
                android:id="@+id/drText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_toEndOf="@+id/mImageVeiw"
                android:text="@string/doctor"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_default"

                />

            <TextView
                android:id="@+id/mDName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/drText"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_toEndOf="@+id/mImageVeiw"
                android:text=" "
                android:textSize="@dimen/text_size_default"

                />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="5dp"
            android:background="#888"
            android:visibility="visible"></LinearLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/whentxt"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="@string/doctor"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_default"

                    />

                <TextView
                    android:id="@+id/mWhenTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/text_size_default"

                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/mCalendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"

                android:src="@mipmap/calendar_home" />

        </FrameLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#888"></View>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/mImageVeiw"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="@string/message"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_default"

        />

    <TextView
        android:id="@+id/mMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/drText"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/mImageVeiw"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text=""
        android:textSize="@dimen/text_size_default"

        />


</LinearLayout>
