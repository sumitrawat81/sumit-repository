<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/registre_input_field"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@color/dark_white"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/eye_img"

            android:orientation="vertical">

            <TextView
                android:id="@+id/mSummeryMTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/blood_pressure"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_m"

                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/mSummeryMg_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_default"

                />

        </LinearLayout>

        <ImageView
            android:id="@+id/eye_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"

            android:src="@mipmap/eye" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#888"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="#EFFBFD"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingStart="10dp"


        android:paddingEnd="10dp"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/mSummeryMg_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_m"


            />

        <TextView
            android:id="@+id/mSummeryDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text=""

            android:textSize="@dimen/text_size_default"

            />

    </RelativeLayout>


</LinearLayout>
