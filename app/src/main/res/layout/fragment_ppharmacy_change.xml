<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:clickable="true"
    android:orientation="vertical"
    tools:context="com.sibsefid.fragemnts.patient.bookappointment.PPharmacyChange">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".50"
                    android:text="@string/name_m"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_default" />

                <EditText
                    android:id="@+id/mName"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_50"
                    android:layout_weight="1.50"
                    android:background="@drawable/registre_input_field_2"
                    android:hint="@string/name"
                    android:imeOptions="actionNext"
                    android:nextFocusDown="@+id/mAddress"
                    android:padding="@dimen/dp_10"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_default" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".50"
                    android:text="@string/address_m_1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_default" />

                <EditText
                    android:id="@+id/mAddress"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_50"
                    android:layout_weight="1.50"
                    android:background="@drawable/registre_input_field_2"
                    android:hint="@string/address"
                    android:imeOptions="actionNext"
                    android:nextFocusDown="@+id/mAddress"
                    android:padding="@dimen/dp_10"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_default" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".50"
                    android:text="@string/country_m"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_default" />

                <RelativeLayout
                    android:id="@+id/rel"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_50"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.5"
                    android:background="@drawable/registre_input_field"
                    android:gravity="right|center_vertical"

                    android:orientation="horizontal">


                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/mCountryChooser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_centerVertical="true"
                        android:background="@drawable/registre_input_field"
                        android:gravity="center_vertical|right"
                        app:ms_arrowColor="@color/text_color_black"
                        app:ms_baseColor="@android:integer/config_shortAnimTime"
                        app:ms_enableErrorLabel="false"
                        app:ms_enableFloatingLabel="false"
                        app:ms_highlightColor="@integer/color_code"
                        app:ms_hint="@string/select_country"
                        app:ms_hintColor="@color/gray"
                        app:ms_thickness="12sp" />


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".50"
                    android:text="@string/state_m"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_default" />

                <RelativeLayout

                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_50"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.5"
                    android:background="@drawable/registre_input_field"
                    android:gravity="right|center_vertical"

                    android:orientation="horizontal">


                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/mStateChooser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_centerVertical="true"
                        android:background="@drawable/registre_input_field"
                        android:gravity="center_vertical|right"
                        app:ms_arrowColor="@color/text_color_black"
                        app:ms_baseColor="@android:integer/config_shortAnimTime"
                        app:ms_enableErrorLabel="false"
                        app:ms_enableFloatingLabel="false"
                        app:ms_highlightColor="@integer/color_code"
                        app:ms_hint="@string/select_state"
                        app:ms_hintColor="@color/gray"
                        app:ms_thickness="12sp" />


                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".50"
                    android:text="@string/city_m"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_default" />

                <EditText
                    android:id="@+id/mCity"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_50"
                    android:layout_weight="1.50"
                    android:background="@drawable/registre_input_field_2"
                    android:hint="@string/city"
                    android:imeOptions="actionNext"
                    android:nextFocusDown="@+id/mPhoneNumber"
                    android:padding="@dimen/dp_10"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_default" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".50"
                    android:text="@string/phone_m"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_default" />

                <EditText
                    android:id="@+id/mPhoneNumber"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_50"
                    android:layout_weight="1.50"
                    android:background="@drawable/registre_input_field_2"
                    android:hint="@string/phone"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:digits="@string/digits"
                    android:nextFocusDown="@+id/mZipCode"
                    android:padding="@dimen/dp_10"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_default" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".50"
                    android:text="@string/zip_m"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_default" />

                <EditText
                    android:id="@+id/mZipCode"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_50"
                    android:layout_weight="1.50"
                    android:background="@drawable/registre_input_field_2"
                    android:hint="@string/post_code"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:digits="@string/digits"
                    android:padding="@dimen/dp_10"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_default" />

            </LinearLayout>

            <Button
                android:id="@+id/mContinueBtn"
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@drawable/login_provider_btn"
                android:gravity="center"
                android:text="@string/save"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

    </FrameLayout>
</ScrollView>
