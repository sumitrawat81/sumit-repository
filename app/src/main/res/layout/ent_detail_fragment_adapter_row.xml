<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/headLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_theme"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/mSerialNo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:background="@color/white_color"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="@string/s_no"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_10" />

        <TextView
            android:id="@+id/mSubject"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_1"
            android:layout_weight=".3"
            android:background="@color/white_color"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="@string/subject"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_10" />

        <ImageView
            android:id="@+id/mImage"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_1"
            android:layout_weight=".3"
            android:background="@color/white_color"
            android:gravity="center"
            android:padding="5dp"
            android:src="@mipmap/add_picture" />

        <TextView
            android:id="@+id/mUploadedDate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_1"
            android:layout_weight=".3"
            android:background="@color/white_color"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="23-07-2016"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_10" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_theme"></View>
</LinearLayout>